{
    "compilerOptions": {
      "target": "es6",                // Set the target ECMAScript version
      "module": "commonjs",           // Module system to use
      "moduleResolution": "Node",
      "outDir": "./dist",             // Output directory for compiled files
      "rootDir": "./",             // Root directory of source files
      "allowJs": true,                // Allow JavaScript files
      "esModuleInterop": true,
      "checkJs": true,                // Enable type checking on JavaScript files
      "jsx": "react-jsx",                  // Enable JSX processing (if needed)
      "baseUrl": ".", 
      "paths": {
      "@configs": ["src/configs"],
      "@configs/*": ["src/configs/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
    },
    "include": ["src/**/*.ts", "src/server.ts"],
    "exclude": ["node_modules"]
}  